@model WebCafeteria.Web.ViewModels.Productos.ProductoDetailsVm

@{
    ViewBag.Title = "Details";
}

<h2>Detalles de Producto</h2>

<div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Producto.NombreProducto)
                @Html.TextBoxFor(model => model.Producto.NombreProducto, new { @class = "form-control", @disabled = "disabled" })

            </div>

        </div>
        @*<div class="col-md-6">
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Venta.FechaVenta)
                @Html.TextBoxFor(model => model.Venta.FechaVenta, new { @class = "form-control", @disabled = "disabled" })

            </div>*@

        @*</div>*@
    </div>
</div>

<p class="mt-3">

    @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-success" })
</p>
<hr />

<table class="table table-bordered table-hover w-75">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Detalles.FirstOrDefault().NombreTamaño)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detalles.FirstOrDefault().Stock)
        </th>

    </tr>
    @if (Model.Detalles.Any())
    {
        foreach (var item in Model.Detalles)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreTamaño)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>


            </tr>
        }

    }
    else
    {
        <tr>
            <td colspan="2" style="text-align:center" class="text-danger"><strong>No se han agregado productos todavía</strong></td>

        </tr>
    }


    @*<td class="fw-bold" style="text-align:right">@Model.Detalles.Sum(d => d.Cantidad)</td>
        <td></td>
        <td class="fw-bold" style="text-align:right">@Model.Detalles.Sum(d => d.Subtotal)</td>*@

</table>
