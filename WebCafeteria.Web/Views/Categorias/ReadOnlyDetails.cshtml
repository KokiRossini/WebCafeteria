@model WebCafeteria.Web.ViewModels.Categoria.CategoriaDetailVm

@{
    ViewBag.Title = "Details";
}

<h2>Detalles de la Categoria</h2>

<div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Categoria.NombreCategoria)
                @Html.TextBoxFor(model => model.Categoria.NombreCategoria, new { @class = "form-control", @disabled = "disabled" })

            </div>

        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Categoria.CantidadProductos)
                @Html.TextBoxFor(model => model.Categoria.CantidadProductos, new { @class = "form-control", @disabled = "disabled" })

            </div>

        </div>
    </div>
</div>
<p class="mt-3">

    @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-success" })
</p>
<hr />
<table class="table table-bordered table-hover w-75">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Productos.FirstOrDefault().NombreProducto)
        </th>
    </tr>
    @if (Model.Productos.Any())
    {
        foreach (var item in Model.Productos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreProducto)
                </td>
            </tr>
        }

    }
    else
    {
        <tr>
            <td colspan="2" style="text-align:center" class="text-danger"><strong>No se han agregado productos todavía</strong></td>

        </tr>
    }

</table>

